<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="lightpath.com.ibuy.presentation.view.About.AboutFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSplash"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:background="@drawable/abouta" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:text="WE BUILD WEB AND MOBILE APPLICATIONS THAT MAKE OUR CLIENTS MORE EFFICIENT. LET US DO THE SAME FOR YOU."
            android:id="@+id/textView2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imgUserIcon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/paolofinal"
                android:layout_gravity="center"
                app:border_color="@android:color/white"
                app:border_width="4dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imgUserIcon2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luism"
                    android:layout_gravity="center"
                    app:border_color="@android:color/white"
                    app:border_width="4dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imgUserIcon3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/janethm"
                    android:layout_gravity="center"
                    app:border_color="@android:color/white"
                    app:border_width="4dp"

                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
